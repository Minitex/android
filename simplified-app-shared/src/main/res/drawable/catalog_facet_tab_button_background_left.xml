<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_checked="false">
    <inset android:insetRight="-2dp">
      <shape android:shape="rectangle">
        <padding android:bottom="@dimen/catalog_facet_tab_padding_bottom"
                 android:left="@dimen/catalog_facet_tab_padding_left"
                 android:right="@dimen/catalog_facet_tab_padding_right"
                 android:top="@dimen/catalog_facet_tab_padding_top" />
        <corners android:bottomLeftRadius="3dp"
                 android:bottomRightRadius="0dp"
                 android:topLeftRadius="3dp"
                 android:topRightRadius="0dp" />
        <solid android:color="@color/button_background" />
        <stroke android:width="@dimen/catalog_facet_tab_stroke"
                android:color="?button_foreground" />
      </shape>
    </inset>
  </item>

  <item android:state_checked="true">
    <inset android:insetRight="-2dp">
      <shape android:shape="rectangle">
        <padding android:bottom="@dimen/catalog_facet_tab_padding_bottom"
                 android:left="@dimen/catalog_facet_tab_padding_left"
                 android:right="@dimen/catalog_facet_tab_padding_right"
                 android:top="@dimen/catalog_facet_tab_padding_top" />
        <corners android:bottomLeftRadius="3dp"
                 android:bottomRightRadius="0dp"
                 android:topLeftRadius="3dp"
                 android:topRightRadius="0dp" />
        <solid android:color="?button_foreground" />
        <stroke android:width="@dimen/catalog_facet_tab_stroke"
                android:color="?button_foreground" />
      </shape>
    </inset>
  </item>

</selector>